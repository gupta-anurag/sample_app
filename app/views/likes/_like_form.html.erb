<%#= form_tag likes_path, :remote => true, :class => "like_micropost" do %>  
   <%#= hidden_field_tag :micropost, micropost.id %>
       <%#= submit_tag '', :class => "likeMicropostSubmit"  %> 
<%# end %>


  <% if like = current_user.likes.find_by_micropost_id(@micropost_id) %>
  <% = form_for like, :html => { :method => :delete },
                      :remote => true do |f| %>
  <% = f.submit "Unlike" %>
  <% end %>
<% else %>
    <%= form_for current_user.likes.build(:micropost_id => @micropost_id), :remote => true do |f| %>
    <%= f.hidden_field :micropost_id %>
    <%= f.hidden_field :user_id %>
    <%= f.submit "Like" %>
  <% end %>
<% end %>                     